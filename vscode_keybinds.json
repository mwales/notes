// This file should be renamed to ~/.config/Code/YOUR_USER_NAME/keybindings.json
// These keybindings let me navigate between window splits and tabs with my fav tmux keybindings
// Place your key bindings in this file to override the defaults
[
    {
        "key": "ctrl+shift+-",
        "command": "-workbench.action.navigateForward",
        "when": "canNavigateForward"
    },
    {
        "key": "ctrl+b",
        "command": "-extension.vim_ctrl+b",
        "when": "editorTextFocus && vim.active && vim.use<C-b> && !inDebugRepl && vim.mode != 'Insert'"
    },
    {
        "key": "ctrl+b",
        "command": "-workbench.action.toggleSidebarVisibility"
    },
    {
        "key": "ctrl+=",
        "command": "editor.action.fontZoomIn"
    },
    {
        "key": "ctrl+-",
        "command": "editor.action.fontZoomOut"
    },
    {
        "key": "ctrl+b n",
        "command": "workbench.action.nextPanelView"
    },
    {
        "key": "ctrl+b o",
        "command": "workbench.action.focusNextGroup"
    },
    {
        "key": "ctrl+b n",
        "command": "workbench.action.nextEditor"
    },
    {
        "key": "ctrl+pagedown",
        "command": "-workbench.action.nextEditor"
    },
    {
        "key": "ctrl+b p",
        "command": "workbench.action.previousEditorInGroup"
    },
    {
        "key": "ctrl+k ctrl+pageup",
        "command": "-workbench.action.previousEditorInGroup"
    },
    {
        "key": "ctrl+numpad_add",
        "command": "workbench.action.terminal.fontZoomIn"
    },
    {
        "key": "ctrl+numpad_subtract",
        "command": "workbench.action.terminal.fontZoomOut"
    }
]
